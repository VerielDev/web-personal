---
import FormContact from "../ui/FormContact.astro"
import { homePage } from "@/const/home"

const { title, subTitle, description, tel, email } = homePage.formContactSection
---

<section id="container-form-contact-section">
	<h1 set:html={title} />
	<div class="form-contact-section">
		<FormContact />
		<div class="form-description">
			<h2 set:html={subTitle} />
			<p>
				{description}
			</p>
			<div class="links">
				<a href={`mailto:${email}`}>{email}</a>
				<a href={`tel:+${tel}`}>{tel}</a>
			</div>
		</div>
	</div>
</section>
<style>
	#container-form-contact-section {
		text-align: center;
		margin-top: var(--p-60);
		h2,
		h1 {
			span {
				font-weight: bold;
				color: transparent;
				-webkit-text-stroke: 1px var(--color-zinc-100);
				text-stroke: 1px var(--color-zinc-100);
			}
		}
		.form-contact-section {
			display: flex;
			justify-content: center;
			align-items: flex-start;
			margin: 0 auto;
			margin-top: var(--p-40);
			gap: 2rem;
			.form-description {
				flex: 1;
				text-align: start;

				h2 {
					font-size: var(--font-size-xlarge);
					font-weight: bold;
					margin-bottom: var(--p-20);
				}
				p {
					color: var(--color-zinc-100);
					margin-top: var(--p-20);
				}
				.links {
					display: flex;
					justify-content: flex-start;
					margin-top: var(--p-20);
					gap: 1rem;
					a {
						color: var(--color-zinc-100);
						text-decoration: none;
						&:hover {
							color: var(--color-zinc-100);
						}
					}
				}
			}
			@media screen and (max-width: 768px) {
				flex-direction: column-reverse;
				.form-description {
					margin-top: var(--p-20);
					text-align: center;
					.links {
						justify-content: center;
					}
				}
			}
		}
	}
</style>
