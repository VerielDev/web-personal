---
import JavaScript from "../svg/JavaScript.astro"
import TypeScript from "../svg/TypeScript.astro"
import Nest from "../svg/Nest.astro"
import React from "../svg/React.astro"
import Next from "../svg/Next.astro"
import NodeJs from "../svg/NodeJs.astro"
import Express from "../svg/Express.astro"
import Java from "../svg/Java.astro"
import Tailwind from "../svg/Tailwind.astro"
import AstroLogo from "../svg/AstroLogo.astro"
import Spring from "../svg/Spring.astro"
import Oracle from "../svg/Oracle.astro"
import { skillsSection } from "@/const/data"

const { title } = skillsSection
const skills = [
	{ title: "JavaScript", icon: JavaScript },
	{ title: "TypeScript", icon: TypeScript },
	{ title: "NestJS", icon: Nest },
	{ title: "React", icon: React },
	{ title: "NextJS", icon: Next },
	{ title: "NodeJS", icon: NodeJs },
	{ title: "Express", icon: Express },
	{ title: "Java", icon: Java },
	{ title: "Tailwind", icon: Tailwind },
	{ title: "Astro", icon: AstroLogo },
	{ title: "Spring", icon: Spring },
	{ title: "OWCS", icon: Oracle },
]
---

<section id="skills-section">
	<h1 set:html={title} />
	<div class="container-skills">
		{
			skills.map(({ title, icon: Icon }) => (
				<div class="skill">
					<Icon />
					{title}
				</div>
			))
		}
	</div>
</section>

<style>
	#skills-section {
		text-align: center;
		margin-top: var(--p-60);
		h1 {
			margin-bottom: var(--p-60);
			span {
				font-weight: bold;
				color: transparent;
				-webkit-text-stroke: 1px var(--color-zinc-100);
				text-stroke: 1px var(--color-zinc-100);
			}
		}
		.container-skills {
			display: flex;
			justify-content: center;
			flex-wrap: wrap;
			gap: 1rem;
			.icon {
				width: 3rem;
				height: 3rem;
			}
			.skill {
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				gap: 1.5rem;
				border: 1px solid var(--color-zinc-100);
				color: var(--color-zinc-100);
				width: 150px;
				height: 150px;
				transition: all 0.3s ease-in-out;
				&:hover {
					transform: scale(1.05);
					box-shadow: 0 0 4px var(--color-zinc-100);
				}
			}
		}
	}
</style>
<script>
	import { animationAppearElements } from "@/libs/utils.ts"

	document.addEventListener("astro:page-load", () => {
		animationAppearElements(".skill")
	})
</script>
