---
import { Image } from "astro:assets";
import SocialBar from "../ui/SocialBar.astro";
import Banner from "../../assets/banner.png";

const textHeroSection = {
    title: "Hello I'am <span>Víctor Manuel</span> Ordiales García. <br> <span>Full Stack Developer</span>.",
    description:
        "Desarrollador Full Stack con experiencia en tecnologías como React, Node, Express, MongoDB, entre otras. Apasionado por la tecnología y la programación.",
};
const { title, description } = textHeroSection;
---

<section id="hero-section">
    <div class="text-hero-section">
        <h1 set:html={title} />
        <p>
            {description}
        </p>
        <SocialBar />
    </div>
    <div class="img-hero-section">
        <Image
            src={Banner}
            alt="Imagen del banner principal"
            loading={"eager"}
        />
    </div>
</section>

<style>
    #hero-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 100px;
        position: relative;
        .text-hero-section {
            flex: 1;
            h1 {
                span {
                    font-weight: bold;
                    color: transparent;
                    -webkit-text-stroke: 1px var(--color-zinc-100);
                    text-stroke: 1px var(--color-zinc-100);
                }
            }
            p {
                color: var(--text-color);
            }
        }
        .img-hero-section {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            img {
                width: 100%;
                max-width: 80%;
                height: fit-content;
            }
        }

        @media (max-width: 768px) {
            flex-direction: column-reverse;
            .text-hero-section {
                text-align: center;
                h1 {
                    font-size: var(--font-size-large);
                }
            }
            .img-hero-section {
                margin-bottom: var(--p-20);
                justify-content: center;
                width: 100%;
                height: 100%;
                img {
                    height: auto;
                }
            }
        }
    }
</style>
