---
interface Props {
	textLevel5: string
}
const { textLevel5 } = Astro.props as Props
---

<div class="level-5">
	<p>Primitivos</p>
	<div class="tooltip">
		<p set:html={textLevel5} />
	</div>
	<div class="line-1"></div>
</div>
<style>
	.level-5 {
		position: absolute;
		cursor: pointer;
		top: 365px;
		left: 20px;
		border: 1px solid var(--color-zinc-100);
		width: 150px;
		padding: var(--p-20);
		.line-1 {
			position: absolute;
			width: 2px;
			height: 40px;
			background-color: var(--color-zinc-100);
			top: 100%;
			left: 48%;
		}
	}
</style>
