---
import { homePage } from "@/const/home"

const { formContactSection: { inputs } } = homePage
const { name, email, tel, website, message } = inputs
---

<form class="form" method="" action="">
	<div class="form-group">
		<input
			type={name.type}
			id={name.name}
			name={name.name}
			placeholder={name.placleholder}
		/>
	</div>
	<div class="form-group">
		<input type={email.type} id={email.name} name={email.name} placeholder={email.placeholder} />
	</div>
	<div class="form-group">
		<input type={tel.type} id={tel.name} name={tel.name} placeholder={tel.placeholder} />
	</div>
	<div class="form-group">
		<input
			type={website.type}
			id={website.id}
			name={website.name}
			placeholder={website.placeholder}
		/>
	</div>
	<div class="form-group">
		<textarea name={message.name} id={message.name} rows={message.rows} placeholder={message.placeholder}
		></textarea>
	</div>
	<button type="submit">Send</button>
</form>
<style>
	.form {
				flex: 1;
				display: flex;
				align-items: center;
				justify-content: center;
				flex-direction: column;
				gap: 1em;
				.form-group {
					width: 100%;
					max-width: 450px;
					input,
					textarea {
						width: 100%;
						padding: var(--p-10);
						background: transparent;
						border: none;
						border: 1px solid var(--color-zinc-100);
						color: : var(--color-zinc-100);
					}
				}
				button {
						max-width: 450px;
						width: 100%;
						padding: var(--p-10);
						background: transparent;
						border: none;
						border: 1px solid var(--color-zinc-100);
						color: : var(--color-zinc-100);
				}
				@media screen and (max-width: 768px) {
						width: 100%;
						.form-group,
						button {
							width: 100%;
							max-width: 100%;
						}
				}
			}
</style>
