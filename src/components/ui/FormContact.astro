<form class="form" method="" action="">
	<div class="form-group">
		<input type="text" id="name" name="name" placeholder="Your name" />
	</div>
	<div class="form-group">
		<input type="email" id="email" name="email" placeholder="Email" />
	</div>
	<div class="form-group">
		<input type="tel" id="phone" name="phone" placeholder="Email" />
	</div>
	<div class="form-group">
		<input
			type="text"
			id="web-site"
			name="website"
			placeholder="Your website (if exists)"
		/>
	</div>
	<div class="form-group">
		<textarea name="message" id="message" rows="5" placeholder="How can i help?"
		></textarea>
	</div>
	<button type="submit">Send</button>
</form>
<style>
	.form {
				flex: 1;
				display: flex;
				align-items: center;
				justify-content: center;
				flex-direction: column;
				gap: 1em;
				.form-group {
					width: 100%;
					max-width: 450px;
					input,
					textarea {
						width: 100%;
						padding: var(--p-10);
						background: transparent;
						border: none;
						border: 1px solid var(--color-zinc-100);
						color: : var(--color-zinc-100);
					}
				}
				button {
						max-width: 450px;
						width: 100%;
						padding: var(--p-10);
						background: transparent;
						border: none;
						border: 1px solid var(--color-zinc-100);
						color: : var(--color-zinc-100);
				}
				@media screen and (max-width: 768px) {
						width: 100%;
						.form-group,
						button {
							width: 100%;
							max-width: 100%;
						}
				}
			}
</style>
